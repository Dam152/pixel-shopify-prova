<div class="main-container absolute top-0 min-h-[180px] max-sm:min-h-[289px] transform  -translate-y-[90px] max-sm:-translate-y-[144px]">
  <div
    class="pre-footer-color w-full items-center h-full rounded-[20px] flex justify-between max-sm:justify-start max-md:flex-col gap-8 py-[36px] px-[64px] max-md:py-[32px] max-md:px-[24px]"
  >
    <div class="max-w-[551px] w-full max-md:max-w-full">
      <h1 class="color-title-pre-footer text-left uppercase text-[4rem] leading-[45px] font-bold max-md:text-[3.2rem] max-md:leading-[35px]">
        {{ el.settings.pre_footer_title }}
      </h1>
    </div>
    <div class="max-w-[349px] w-full max-md:max-w-full">
      {% form 'customer' %}
        <div class="flex items-center gap-3 py-3 px-4 rounded-[62px] w-full bg-white min-h-[46px] mb-[14px]">
          {% render 'icons', name: 'mail_icon' %}
          <input
            type="email"
            name="contact[email]"
            placeholder="Enter your email address"
            class="bg-transparent focus:outline-none placeholder:opacity-40 placeholder:text-black text-[1.6rem] max-sm:text-[1.4rem]"
            required
          >
        </div>
        <button
          type="submit"
          class=" border border-black px-4 py-3 flex justify-center items-center bg-white rounded-[62px] w-full text-[1.6rem] font-medium min-h-[46px] h-full max-sm:text-[1.4rem]"
        >
          {{ el.settings.button_title_pre_footer }}
        </button>
      {% endform %}
    </div>
  </div>
</div>
